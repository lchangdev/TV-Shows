<h3><%= @television_show.title %></h3>

<ul>
  <li>Network: <%= @television_show.network %></li>
  <li>Years: <%= @television_show.years %></li>
</ul>

<div>
  <%= @television_show.synopsis %>
</div>
<div>
  <ul>
    <% @characters.each do |character| %>
      <li><%= character.name %> <%= character.actor %> <%= character.description %></li>
    <% end %>
  </ul>
</div>

  <% if @television_show.errors.any? %>
    <ul>
      <% @television_show.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

<%= form_for [@television_show, @character] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :actor %>
  <%= f.text_field :actor %><br>

  <%= f.label :description %>
  <%= f.text_field :description %><br>

  <%= f.submit 'Submit' %>
<% end %>

